{
	"name": "note-app",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint . --max-warnings 0",
		"prettier:check": "prettier --check .",
		"prettier:fix": "prettier --write .",
		"format": "prettier --write .",
		"test": "vitest run",
		"test:unit": "vitest run src/",
		"test:integration": "vitest run tests/integration/",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"test:e2e": "playwright test --project=chromium",
		"test:ci": "vitest run --reporter=verbose --reporter=github-actions",
		"test:quality": "vitest run --coverage --reporter=json",
		"ci:quality-gate": "pnpm run check && pnpm run lint && pnpm run test:quality",
		"ci:build-check": "pnpm run build && echo 'Build successful'",
		"performance:test": "pnpm run build && pnpm run test --reporter=json",
		"db:generate": "drizzle-kit generate",
		"db:push": "drizzle-kit push",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"db:seed": "node scripts/seed.js"
	},
	"devDependencies": {
		"@eslint/js": "^9.30.1",
		"@playwright/test": "^1.53.2",
		"@sveltejs/adapter-auto": "^3.3.1",
		"@sveltejs/kit": "^2.15.4",
		"@sveltejs/vite-plugin-svelte": "^5.0.2",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.8",
		"@testing-library/user-event": "^14.6.1",
		"@types/bcryptjs": "^3.0.0",
		"@types/node": "^24.0.10",
		"@types/uuid": "^10.0.0",
		"@typescript-eslint/eslint-plugin": "^8.18.2",
		"@typescript-eslint/parser": "^8.35.1",
		"@vitest/coverage-v8": "^2.1.9",
		"autoprefixer": "^10.4.20",
		"axe-core": "^4.10.3",
		"axe-playwright": "^2.1.0",
		"drizzle-kit": "^0.31.4",
		"eslint": "^9.30.1",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.1",
		"fishery": "^2.3.1",
		"globals": "^16.3.0",
		"jsdom": "^26.1.0",
		"mdsvex": "^0.12.6",
		"playwright-lighthouse": "^4.0.0",
		"postcss": "^8.4.49",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.3.2",
		"prettier-plugin-tailwindcss": "^0.6.9",
		"rehype-autolink-headings": "^7.1.0",
		"rehype-slug": "^6.0.0",
		"shiki": "^3.7.0",
		"svelte": "^5.34.9",
		"svelte-check": "^4.1.0",
		"svelte-eslint-parser": "^1.2.0",
		"tailwindcss": "^3.4.16",
		"tsx": "^4.20.3",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.35.0",
		"vite": "^6.0.4",
		"vitest": "^2.1.8"
	},
	"type": "module",
	"dependencies": {
		"@auth/core": "^0.40.0",
		"@auth/sveltekit": "^1.10.0",
		"@codemirror/commands": "^6.8.1",
		"@codemirror/lang-markdown": "^6.3.3",
		"@codemirror/language": "^6.11.2",
		"@codemirror/search": "^6.5.11",
		"@codemirror/state": "^6.5.2",
		"@codemirror/theme-one-dark": "^6.1.3",
		"@codemirror/view": "^6.38.0",
		"@libsql/client": "^0.15.9",
		"bcryptjs": "^3.0.2",
		"codemirror": "^6.0.2",
		"drizzle-orm": "^0.44.2",
		"file-type": "^21.0.0",
		"gray-matter": "^4.0.3",
		"sharp": "^0.34.2",
		"uuid": "^11.1.0"
	}
}
